<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration
    xmlns="http://hibernate.org/xsd/orm/cfg"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://hibernate.org/xsd/orm/cfg
        https://hibernate.org/xsd/orm/cfg/hibernate-configuration-7.0.xsd">


    <session-factory>

        <!-- DB -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/company</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Irfa@1234</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Second Level Cache -->
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.use_query_cache">true</property>

        <property name="hibernate.cache.region.factory_class">
            org.hibernate.cache.jcache.JCacheRegionFactory
        </property>

        <property name="hibernate.jcache.provider">
            org.ehcache.jsr107.EhcacheCachingProvider
        </property>

        <property name="hibernate.jcache.uri">classpath:ehcache.xml</property>

        <!-- Entity -->
        <mapping class="in.pw.ioi.entity.Student"/>

    </session-factory>
</hibernate-configuration>
